.nav-pills > li {
  float: left;
}
.nav-pills > li > a {
  font-family: Arial, "Helvetica Neue", Helvetica, sans-serif;
  font-size: 13px;
  color: #777777;
  padding: 12px 16px;
  min-width: 80px;
  text-align: center;
}
.nav-pills > li > a:hover {
  color: #777777;
  background-color: #fff;
  border-bottom: 2px solid #bbb;
  padding-bottom: 10px;
}
.nav-pills > li > a:focus {
  background-color: #fff;
}
.nav-pills > li + li {
  margin-left: 1px;
}
.nav-pills > li.active > a,
.nav-pills > li.active > a:hover,
.nav-pills > li.active > a:focus {
    color: #222222;
    font-weight: bold;
    background-color: #ffffff;
    border-bottom: 2px solid #db3d44;
    padding-bottom: 10px;
}

.nav-pills.nav-justified > li > a:hover {
  color: #777777;
  background-color: #fff;
  border-bottom: 2px solid #bbb;
  padding-bottom: 10px;
}
.nav-pills.nav-justified > li.active > a,
.nav-pills.nav-justified > li.active > a:hover,
.nav-pills.nav-justified > li.active > a:focus {
    color: #222222;
    font-weight: bold;
    background-color: #ffffff;
    border-bottom: 2px solid #db3d44;
    padding-bottom: 10px;
}
.nav-pills.nav-justified > li > a {
    background-color: #ffffff;
    padding-bottom: 12px;
    border-bottom: 0;
}
.nav-pills.nav-justified > li + li > a {
    border-left: 0;
}
