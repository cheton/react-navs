.nav-light-tabs {
    > li {
        float: left;

        > a {
            font-size: 13px;
            color: #777777;
            padding: 12px 16px;
            min-width: 80px;

            &:focus {
                background-color: #fff;
            }
            &:hover {
                color: #777777;
                background-color: #fff;
                border-bottom: 2px solid #bbb;
                padding-bottom: 10px;
            }
        }

        &.active > a,
        &.active > a:focus,
        &.active > a:hover {
            color: #222222;
            font-weight: bold;
            background-color: #ffffff;
            border-bottom: 2px solid #db3d44;
            padding-bottom: 10px;
        }
    }

    > li + li {
        margin-left: 1px;
    }
}
